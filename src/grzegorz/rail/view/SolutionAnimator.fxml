                      <TableColumn fx:id="stepNumColumn" prefWidth="75.0" text="#" />
                      <TableColumn fx:id="stepColumn" prefWidth="75.0" text="Step" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
